<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".fragments.ImamInfoFragment">

    <!-- Toolbar with back arrow -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:title="Imam Info"
        android:titleTextColor="@color/black"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:padding="24dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/card_background">

                <TextView
                    android:id="@+id/tvImamName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imam Name"
                    android:textSize="24sp"
                    android:textColor="#1A2A44"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvMosqueName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mosque Name"
                    android:textSize="18sp"
                    android:textColor="#374151"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginVertical="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textSize="16sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvVillage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Village:"
                        android:textSize="16sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvUpazila"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upazila:"
                        android:textSize="16sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvZilla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zilla:"
                        android:textSize="16sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="6dp" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>
