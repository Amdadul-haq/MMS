<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Image -->
        <ImageView
            android:id="@+id/mosque_header_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:transitionName="header_transition"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Mosque header image"
            android:alpha="0.9" />

        <!-- Mosque Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mosque_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/mosque_header_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-40dp"
            android:layout_marginHorizontal="12dp"
            app:cardBackgroundColor="#FFFFFF"
            android:translationY="100dp"
            android:alpha="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/mosque_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_mosque"
                    android:layout_marginBottom="12dp"
                    app:tint="@color/primaryColor"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/mosque_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="খিয়ার পাড়া বকুলতলা জামে মসজিদ"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A2A44"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/mosque_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: Khiyar Para, Bakultala"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Feature Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_imam_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="👤 Imam Information"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/primaryColor"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/mosque_info_card"
            app:rippleColor="#33FFFFFF"
            android:translationY="50dp"
            android:alpha="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:text="🖼️ Mosque Gallery"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/primaryColor"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btn_imam_info"
            app:rippleColor="#33FFFFFF"
            android:translationY="50dp"
            android:alpha="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="24dp"
            android:text="📞 Contact Mosque"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/primaryColor"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btn_gallery"
            app:rippleColor="#33FFFFFF"
            android:translationY="50dp"
            android:alpha="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>